#!/usr/bin/env perl

use 5.010;
use strict;
use warnings;

use App::PMUtils;
use Perinci::CmdLine 1.04;
use Perinci::Sub::Util qw(gen_modified_sub);
use SHARYANTO::Module::Path;

# VERSION
# DATE

gen_modified_sub(
    output_name => 'podpath',
    base_name   => 'SHARYANTO::Module::Path::pod_path',
    modify_args => {
        module => sub {
            my $as = shift;
            $as->{completion} = $App::PMUtils::_complete_pod;
        },
    },
);

Perinci::CmdLine->new(url => '/main/podpath')->run;

# ABSTRACT: Get path to locally installed POD
# PODNAME: podpath

=head1 SYNOPSIS

Basic usage:

 % podpath PSGI

To active bash completion:

 % complete -C podpath podpath; # can be put in bash startup file e.g. .bashrc
 % podpath PSG<tab>

