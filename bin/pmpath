#!/usr/bin/env perl

use 5.010;
use strict;
use warnings;

use App::PMUtils;
use Perinci::CmdLine 1.04;
use Perinci::Sub::Util qw(gen_modified_sub);
use SHARYANTO::Module::Path;

# DATE
# VERSION

gen_modified_sub(
    output_name => 'pmpath',
    base_name   => 'SHARYANTO::Module::Path::module_path',
    modify_args => {
        module => sub {
            my $as = shift;
            $as->{completion} = $App::PMUtils::_complete_module;
        },
    },
);

Perinci::CmdLine->new(
    log_any_app => 0,
    url => '/main/pmpath',
)->run;

# ABSTRACT: Get path to locally installed Perl module
# PODNAME: pmpath

=head1 SYNOPSIS

Basic usage:

 % pmpath Some::Module

Find all modules (-a), return absolute paths (-P):

 % pmpath -a Some::Module

See all other options:

 % pmpath --help

To active bash completion:

 % complete -C pmpath pmpath ; # can be put in bash startup file e.g. .bashrc
 % pmpath Some<tab>

