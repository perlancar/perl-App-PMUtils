#!perl

use 5.010;
use strict;
use warnings;
use Log::Any '$log';

use App::PMUtils;
use Perinci::CmdLine::Any -prefer_lite=>1;

# DATE
# VERSION

our %SPEC;
$SPEC{pmuninst} = {
    v => 1.1,
    summary => 'Uninstall an installed Perl module (using cpanm --uninstall)',
    args => {
        module => {
            schema => ['array*', of=>'str*'],
            req    => 1,
            pos    => 0,
            greedy => 1,
            element_completion => $App::PMUtils::_complete_module,
        },
    },
    deps => {
        exec=>'cpanm',
    },
};
sub pmuninst {
    my %args = @_;
    my $mods = $args{module};
    for my $mod (@$mods) {
        $mod =~ s/\.pm$//; $mod =~ s!/!::!g; # convenience
        system "cpanm", "--uninstall", $mod;
    }
    [200, "OK"]; # XXX check/accumulate success status
}

Perinci::CmdLine::Any->new(
    url => '/main/pmuninst',
)->run;

# ABSTRACT: Uninstall an installed Perl module (using cpanm --uninstall)
# PODNAME: pmuninst

=head1 SYNOPSIS

 % pmuninst App::Stopwatch

See all other options:

 % pmuninst --help

