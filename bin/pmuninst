#!perl

# DATE
# VERSION

use 5.010;
use strict;
use warnings;
use Log::Any '$log';

use Perinci::CmdLine::Any -prefer_lite=>1;

our %SPEC;
$SPEC{pmuninst} = {
    v => 1.1,
    summary => 'Uninstall an installed Perl module (using cpanm --uninstall)',
    args => {
        module => {
            schema => ['array*', of=>'str*', min_len=>1],
            req    => 1,
            pos    => 0,
            greedy => 1,
            element_completion => sub {
                require Complete::Module;
                my %args = @_;
                Complete::Module::complete_module(word=>$args{word});
            },
        },
    },
    deps => {
        prog => 'cpanm',
    },
};
sub pmuninst {
    my %args = @_;
    my $mods = $args{module};
    for my $mod (@$mods) {
        $mod =~ s/\.pm$//; $mod =~ s!/!::!g; # convenience
        system "cpanm", "--uninstall", $mod;
    }
    [200, "OK"]; # XXX check/accumulate success status
}

Perinci::CmdLine::Any->new(
    url => '/main/pmuninst',
)->run;

# ABSTRACT:
# PODNAME:

=head1 SYNOPSIS

 % pmuninst App::Stopwatch

