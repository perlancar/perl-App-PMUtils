#!perl

use 5.010;
use strict;
use warnings;

use App::PMUtils;
use Perinci::CmdLine 1.13;

# DATE
# VERSION

our %SPEC;
$SPEC{pmman} = {
    v => 1.1,
    summary => 'Show manpage of Perl module',
    description => <<'_',

This function is essentially `man MODNAME`, but offers command-line completion.

_
    args => {
        module => {
            schema => 'str*',
            req => 1,
            pos => 0,
            completion => $App::PMUtils::_complete_module,
        },
    },
    deps => {
        prog => 'man',
    },
};
sub pmman {
    my %args = @_;
    my $mod = $args{module};
    $mod =~ s!/!::!g;
    my @cmd = ("man", $mod);
    exec @cmd;
    # [200]; # unreachable
}

Perinci::CmdLine->new(
    log_any_app => 0,
    url => '/main/pmman',
)->run;

# ABSTRACT: Show manpage of Perl module
# PODNAME: pmman

=head1 SYNOPSIS

Basic usage:

 % pmman Some::Module

To active bash completion:

 % complete -C pmman pmman ; # can be put in bash startup file e.g. .bashrc
 % pmman Some<tab>

